<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="31dp"
        android:text="Nama" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="18dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="19dp"
        android:layout_y="71dp"
        android:text="Deskripsi" />

    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_x="108dp"
        android:layout_y="60dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spn_parent"
        android:layout_width="193dp"
        android:layout_height="38dp"
        android:layout_x="108dp"
        android:layout_y="106dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="122dp"
        android:text="Parent" />

    <EditText
        android:id="@+id/et_urutan"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="150dp"
        android:ems="10" />

    <EditText
        android:id="@+id/et_gambar"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_x="108dp"
        android:layout_y="201dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="164dp"
        android:text="Urutan" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="220dp"
        android:text="Gambar" />

    <ImageView
        android:id="@+id/gbr"
        android:layout_width="189dp"
        android:layout_height="100dp"
        android:layout_x="113dp"
        android:layout_y="244dp"
        android:src="@drawable/item_background_holo_dark" />

    <CheckBox
        android:id="@+id/cc_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="318dp"
        android:text="Aktif" />

    <Button
        android:id="@+id/btngbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="358dp"
        android:text="Tambah Gambar" />

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="175dp"
        android:layout_y="358dp"
        android:text="Simpan" />

</AbsoluteLayout>