<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="31dp"
        android:text="Nama" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="22dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="90dp"
        android:text="Deskripsi" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="150dp"
        android:text="Gambar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="209dp"
        android:text="Parent" />

    <EditText
        android:id="@+id/et_urutan"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:layout_y="245dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="258dp"
        android:text="Urutan" />

    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_x="108dp"
        android:layout_y="78dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Spinner
        android:id="@+id/spn_parent"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_x="112dp"
        android:layout_y="190dp" />

    <CheckBox
        android:id="@+id/cc_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="300dp"
        android:text="Aktif" />

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="354dp"
        android:text="Simpan" />

    <Button
        android:id="@+id/button1"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:layout_y="134dp"
        android:text="Button" />

</AbsoluteLayout>
